<Window x:Class="CRM.AddNewItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:CRM"
        xmlns:models="clr-namespace:CRM.Models"
        xmlns:vm="clr-namespace:CRM.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:AddNewStockItemViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="AddNewItemView" Height="360" Width="450">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextBox.VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="TextBox.Height" Value="20" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="ComboBox.Height" Value="20"/>
        </Style>

        <Style x:Key="WindowButton">
            <Setter Property="Button.Width" Value="120" />
            <Setter Property="Button.Margin" Value="5,0,0,0" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.Resources>
            <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="currencyDataProvider">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="models:Currency" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="96"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0">Наименование</TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=Name, Mode=TwoWay}"></TextBox>

        <TextBlock Grid.Row="1" Grid.Column="0">Производитель</TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" IsReadOnly="True" Margin="0,2,2,2"></TextBox>
        <Button Grid.Row="1" Grid.Column="3" Command="{Binding Path=AddManufacturerCommand}" Margin="0,2,0,2" FontWeight="Heavy">...</Button>

        <TextBlock Grid.Row="2" Grid.Column="0">Описание</TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Title, Mode=TwoWay}" Height="92" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>

        <TextBlock Grid.Row="3" Grid.Column="0">Валюта</TextBlock>
        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Source={StaticResource currencyDataProvider}}" SelectedValue="{Binding Currency, Mode=TwoWay}"></ComboBox>

        <TextBlock Grid.Row="4" Grid.Column="0">Цена закупки</TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding PurchasePrice, Mode=TwoWay}"></TextBox>

        <TextBlock Grid.Row="5" Grid.Column="0">Цена продажи</TextBlock>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding RetailPrice, Mode=TwoWay}"></TextBox>

        <TextBlock Grid.Row="6" Grid.Column="0">Остаток</TextBlock>
        <TextBox Grid.Row="6" Grid.Column="1" IsReadOnly="True" Text="{Binding Path=Quantity}"></TextBox>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource WindowButton}" Command="{Binding AddItemCommand}">Сохранить</Button>
            <Button Style="{StaticResource WindowButton}" Command="{Binding SaveClientCommand}">Отмена</Button>
        </StackPanel>
                
    </Grid>
</Window>
